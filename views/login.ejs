<%- include('./partials/header') %>
<main class="container my-5 py-5 text-center">
    <h1>Login</h1>
    
    <div class="alert alert-success mt-5 alert-login">
        <% if (locals.mensagem) { %>
            <div class="alert alert-success danger" ><%= mensagem %></div>
          <% } %>
      
        <form method="POST" action="#">
            <div class="form-group login">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" class="form-control" required placeholder="Prencha seu email" />
            </div>
            <div class="form-group login">
                <label for="password">Senha</label>
                <input name="password" id="password" type="password" class="form-control" rows="5" minlength="6"
                    required  placeholder="Digite sua senha"/>
            </div>
            <button class="btn btn-primary">Enviar</button>

        </form>



    </div>
</main>

<%- include('./partials/footer') %>